{% extends '::base.html.twig' %}

{% block right_content -%}
    <h1><i class="icon-circle-info icon-largest" title="Show"></i> <small>{{ entity.name | capitalize }}'s Details</small></h1>

    <table class="record_properties table table-striped table-bordered table-hover">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Uid</th>
                <td>{{ entity.uid }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ entity.name }}</td>
            </tr>
            <tr>
                <th>Recordstablename</th>
                <td>{{ entity.recordstablename }}</td>
            </tr>
            <tr>
                <th>Organisationunittablename</th>
                <td>{{ entity.organisationunitTableName }}</td>
            </tr>
            <tr>
                <th>Organisationunitlongnamecolumnname</th>
                <td>{{ entity.organisationunitLongnameColumNname }}</td>
            </tr>
            <tr>
                <th>Organisationunitcodecolumnname</th>
                <td>{{ entity.organisationunitCodeColumnName }}</td>
            </tr>
            <tr>
                <th>Organisationunitownershipcolumnname</th>
                <td>{{ entity.organisationunitOwnershipColumnName }}</td>
            </tr>
            <tr>
                <th>Recordsorganisationunitcolumnname</th>
                <td>{{ entity.recordsOrganisationunitColumnName }}</td>
            </tr>
            <tr>
                <th>Recordsinstancecolumnname</th>
                <td>{{ entity.recordsInstanceColumnName }}</td>
            </tr>
            <tr>
                <th>Tiisparentorganisationunitcode</th>
                <td>{{ entity.tiisParentOrganisationunitCode }}</td>
            </tr>
            <tr>
                <th>Hristopmostorganisationunitshrotname</th>
                <td>{{ entity.hrisTopMostOrganisationunitShrotname }}</td>
            </tr>
            <tr>
                <th>Hrisinstituiongroupname</th>
                <td>{{ entity.hrisInstituionGroupName }}</td>
            </tr>
            <tr>
                <th>Hosturl</th>
                <td>{{ entity.hostUrl }}</td>
            </tr>
            <tr>
                <th>Password</th>
                <td>{{ entity.password }}</td>
            </tr>
            <tr>
                <th>Username</th>
                <td>{{ entity.username }}</td>
            </tr>
            <tr>
                <th>Database</th>
                <td>{{ entity.database }}</td>
            </tr>
            <tr>
                <th>Employeeformname</th>
                <td>{{ entity.employeeFormName }}</td>
            </tr>
            <tr>
                <th>Defaultnationality</th>
                <td>{{ entity.defaultNationality }}</td>
            </tr>
            <tr>
                <th>Defaulthrnationality</th>
                <td>{{ entity.defaultHrNationality }}</td>
            </tr>
            <tr>
                <th>Datecreated</th>
                <td>{{ entity.datecreated|date('Y-m-d H:i:s') }}</td>
            </tr>
            <tr>
                <th>Lastupdated</th>
                <td>{{ entity.lastupdated|date('Y-m-d H:i:s') }}</td>
            </tr>
        </tbody>
    </table>

    <ul class="record_actions inline">
        <li>
            <a href="{{ path('tiisdataconnection') }}" class="btn">
                Back to the list
            </a>
        </li>
        <li>
            <a href="{{ path('tiisdataconnection_edit', { 'id': entity.id }) }}" class="btn">
                Edit
            </a>
        </li>
        <li>
            <a class="btn" href="{{ path('tiisdataconnection_new') }}">
                Create a another
            </a>
        </li>
        <li>
            <a data-toggle="modal" href="#deleteModalFor{{ entity.uid }}" class="btn btn-danger">Delete {{ entity.name | capitalize }}</a>

            <!-- Modal -->
            <div class="modal fade" id="deleteModalFor{{ entity.uid }}">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <div class="modal-header">
                            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button>
                            <h4 class="modal-title"><i class="icon-circle-remove icon-largest" title="Delete"></i>Deleting {{ entity.name | capitalize }}</h4>
                        </div>
                        <div class="modal-body">
                            Are you sure you want to delete <strong>{{ entity.name | capitalize }}</strong> that was created on <em>{{ entity.datecreated|date('d/m/Y') }}</em>
                            {% if entity.lastUpdated %}
                                and last updated on {{ entity.lastupdated|date('H:i:s d/m/Y') }} ??
                            {% else %}
                                and never updated ??
                            {% endif %}
                        </div>
                        <div class="modal-footer">
                            <form action="{{ path('tiisdataconnection_delete', { 'id': entity.id }) }}" method="post">
                                <input type="hidden" class="btn btn-danger" name="_method" value="DELETE" />
                                {{ form_widget(delete_form) }}
                                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                                <button type="submit" class="btn btn-danger">Delete</button>
                            </form>

                        </div>
                    </div><!-- /.modal-content -->
                </div><!-- /.modal-dialog -->
            </div><!-- /.modal -->

        </li>
    </ul>

{% endblock %}
